# $Id$

include $(TOPDIR)/Version

CFLAGS = -I$(TOPDIR)/src/include -O2 -m386 -DVERSION='"$(VERSION)"' -DHAVE_ALLEGRO -Wall

%.o : %.asm
	$(NSM) -f coff $< -o$@

%.o : %.cc
	$(CC) $(DEFS) $(EXTRAFLAGS) $(CFLAGS) -c -o$@ $<

%.o : %.c
	$(CC) $(DEFS) $(EXTRAFLAGS) $(CFLAGS) -c -o$@ $<

%.o : %.s
	$(CC) $(DEFS) $(EXTRAFLAGS) $(CFLAGS) -c -o$@ $<
